@page
@model OnionArchituctureSampleProject.Pages.Product.CreateModel
@{
}
@if (ViewData["Error"]!= null)
{
	<div class="alert-danger">
		<p> @ViewData["Error"]</p>
	</div>

}



<form class="mr-auto ml-auto" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.Name"></label>
            <input class="form-control" asp-for="@Model.Command.Name">
            <span asp-validation-for="@Model.Command.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.UnitPrice"></label>
            <input class="form-control" asp-for="@Model.Command.UnitPrice">
            <span asp-validation-for="@Model.Command.UnitPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.CategoryId"></label>
            <select asp-for="@Model.Command.CategoryId" asp-items="@Model.ProductCategories "  >
           <option value="0" > گروه محصول را انتخاب کنید </option>
            </select>
            
        </div>
    </div>


    <button type="submit" class="btn btn-success">ارسال</button>
</form>

